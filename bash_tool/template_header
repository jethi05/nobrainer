      <td style="padding: 3px;"></td>
    </tr>

    <!-- Zeile unterhalb -->
    <tr style="background-color: #002d3c; color: white;">
      <td style="padding: 3px; text-align: center;">Ausbildungswoche</td>
      <td style="padding: 3px; text-align: center;">Vom: `r umgewandeltes_vom`</td>
